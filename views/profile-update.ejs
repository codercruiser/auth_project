<%- include('header') %>
<div class="log-form">
  <form action="/profile-now" method="POST">
    <div>
      <img src="/images/logo-black.png" alt="" srcset="">
      <h1>Profile Update</h1>
      <h5><a href="/profile">Dashboard</a></h5>
    </div>

    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= user.name %>" required><br><br>

    <label for="username">Username:</label>
    <input type="text" id="username" name="username" value="<%= user.username %>" required>

    <label for="age">Age:</label>
    <input type="number" id="age" name="age" value="<%= user.age %>" required><br><br>

    <label for="address">Address:</label>
    <input type="text" id="address" name="address" value="<%= user.address %>" required><br><br>

    <label for="documents">Documents:</label>
    <input type="file" id="documents" name="documents" required>

    <input type="submit" value="Update">
    
  </form>
</div>
</body>
</html>
